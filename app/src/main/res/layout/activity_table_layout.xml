<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_table_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="1"
    tools:context="com.codesa.layouts.TableLayoutActivity">

    <TableRow android:background="@color/colorPrimary">

        <TextView
            android:layout_column="0"
            android:text="Producto"
            android:padding="3dp"
            android:textColor="@color/blanco" />

        <TextView android:layout_column="2"
            android:text="SubTotal"
            android:padding="3dp"
            android:textColor="@color/blanco"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_column="0"
            android:text="Jabon de Manos x 1"
            android:padding="3dp"
            android:textColor="@color/colorPrimary" />

        <TextView android:layout_column="2"
            android:text="$2000"
            android:padding="3dp"
            android:textColor="@color/colorPrimary"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_column="0"
            android:text="Shampoo x 1"
            android:padding="3dp"
            android:textColor="@color/colorPrimary" />

        <TextView android:layout_column="2"
            android:text="$5000"
            android:padding="3dp"
            android:textColor="@color/colorPrimary"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_column="0"
            android:text="Crema de Dientes x 2"
            android:padding="3dp"
            android:textColor="@color/colorPrimary" />

        <TextView android:layout_column="2"
            android:text="$20000"
            android:padding="3dp"
            android:textColor="@color/colorPrimary"/>
    </TableRow>

    <View android:layout_height="2dp" android:background="@color/colorPrimary" />

    <TableRow>

        <TextView
            android:layout_column="1"
            android:text="SubTotal"
            android:padding="3dp"
            android:textColor="@color/colorPrimary" />

        <TextView android:layout_column="2"
            android:text="$27000"
            android:padding="3dp"
            android:textColor="@color/colorPrimary"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_column="1"
            android:text="Costo de Envio"
            android:padding="3dp"
            android:textColor="@color/colorPrimary" />

        <TextView android:layout_column="2"
            android:text="$3000"
            android:padding="3dp"
            android:textColor="@color/colorPrimary"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_column="1"
            android:text="Costo Total"
            android:padding="3dp"
            android:textColor="@color/colorAccent" />

        <TextView android:layout_column="2"
            android:text="$30000"
            android:padding="3dp"
            android:textColor="@color/colorAccent"/>
    </TableRow>

</TableLayout>
